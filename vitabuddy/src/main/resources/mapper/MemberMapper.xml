<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="com.example.vitabuddy.dao.IMemberDAO">



<!-- 회원정보 수정 폼 : 수정 폼에 기존에 입력한 정보 표시하기 위함-->
<select id="myInfoUpdateForm" parameterType="string" resultType="com.example.vitabuddy.model.MemberVO">
	select * from users where userId=#{userId}
</select>

<update id="myInfoUpdate" parameterType="com.example.vitabuddy.model.MemberVO">
	update users 
	set userName=#{userName}, userEmail=#{userEmail}, userPwd=#{userPwd}, userPh=#{userPh},
		userZipcode=#{userZipcode}, userAddress1=#{userAddress1}, userAddress2=#{userAddress2}
	
</update>



</mapper>